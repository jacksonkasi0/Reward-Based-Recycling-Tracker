{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "outDir": "dist",
      "target": "es2021",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node", // Ensure this is set to 'node'
      "resolveJsonModule": true,
      "noUncheckedIndexedAccess": true
    },
    "include": ["src", "*.ts", "env.mjs", "**/*.ts"],
    "exclude": ["dist", "node_modules"] // Explicitly exclude node_modules
  }
  